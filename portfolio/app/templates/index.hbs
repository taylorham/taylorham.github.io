<div id="main-content">
  <div id="lead-panel">
    <div class="container">
      <div class="align-wrapper">
        <div class="v-align text-center">
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <h1 style="line-height: 60px;">My name is Taylor Ham and I'm a web developer in Los Angeles.</h1>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="work-panel">
    <div class="container">
      <div class="align-wrapper">
        <div class="v-align text-center">
          <h1 class="panel-heading">Portfolio</h1>
          <div class="work-example row auto-clear">
            {{#each model as |example|}}
              <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                  <div class="example-header">
                    <h3>{{example.title}}</h3>
                  </div>
                  <div class="example-body">
                  <img src={{example.image}} alt={{example.title}}>
                    <div class="example-caption">
                      <div class="example-caption-text">
                        <p>{{example.blurb}}</p>
                      </div>
                      <div class="example-tags text-center">
                        {{#each example.tags as |tag|}}
                          <span class={{tag}}>{{tag}}</span>
                        {{/each}}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="training-panel">
    <div class="container">
      <div class="align-wrapper">
        <div class="v-align text-center">
          <h1 class="panel-heading">Training</h1>
          <div id="loader-wrapper">
            <div id="loader"></div>
          </div>
          <div class="treehouse-widget row">
            <div class="col-lg-12" style="margin-bottom: 30px;">
              <h2>TeamTreehouse.com Achievements</h2>
              <h3><strong class="total"></strong> total points earned</h3>
            </div>
            <div class="col-sm-6 col-md-4 col-md-offset-1">
              <div class="pie-wrapper">
                <div class="pie"></div>
              </div>
            </div>
            <div class="col-sm-6 col-md-4 col-md-offset-1">
              <div class="legend">
                <ul id="topics" class="list-unstyled">
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/treehouse.js"></script>
<script src="/fixed-header.js"></script>

{{outlet}}
